                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto mu-navbar-nav">

                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="nav-item">@Html.ActionLink("Grade", "Grade", "Home")</li>
                        @if (Request.IsAuthenticated && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">@Html.ActionLink("Admin Panel", "AdminPanel", "Home")</li>
                        }
                        @if (Request.IsAuthenticated && User.IsInRole("Support"))
                        {
                            <li class="nav-item">@Html.ActionLink("Queries", "Index", "Queries")</li>
                        }
                        <li class="nav-item">@Html.ActionLink("Ask A Question", "Create", "Queries")</li>


                        @*<li class="nav-item active">
                                <a href="index.html">Home</a>
                            </li>
                            <li class="nav-item"><a href="about-us.html">About us</a></li>
                            <li class="nav-item"><a href="services.html">Services</a></li>
                            <li class="nav-item"><a href="portfolio.html">Portfolio</a></li>
                            <li class="nav-item dropdown">
